{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "npx pnpm dev",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "pattern": [
                        {
                            "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "code": 4,
                            "message": 5
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "Local:"
                    }
                }
            ],
            "label": "pnpm: dev",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        }
    ]
}